<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressBar?>
<BorderPane fx:controller="com.example.addressbook.tammy2.HomeController" xmlns:fx="http://javafx.com/fxml"
            prefHeight="200" prefWidth="320" styleClass="body">
    <top>
        <Text styleClass="pageTitle" text="Homepage"/>
    </top>

    <left>
        <VBox fx:id = "buttonsVbox">
            <Label styleClass="heading1" fx:id="userNameLabel"/>
            <Label styleClass="heading2" fx:id="creditsLabel"/>
            <Label styleClass="heading2" fx:id="streakLabel"/>
            <Button onAction="#handleLogButtonClicked" text = "Log"/>
            <Button onAction="#handleMemoriesButtonClicked" text = "Memories"/>
            <HBox fx:id = "buttonsHbox">
                <Button onAction="#handleHelpButtonClicked" text = "?"/>
                <Button onAction="#handleMenuButtonClicked" text = "Menu"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox fx:id = "imageVbox">
            <ImageView id = "tammyImage" fx:id="tammyImage"/>
            <Label id="tammyName" fx:id="tammyName"/>
        </VBox>
    </center>

    <right>
        <VBox fx:id= "vitalsVbox">
            <Label styleClass="heading1" >Vitals:</Label>
            <Label styleClass="heading2" >Water:</Label>
            <ProgressBar fx:id = "waterProgressBar"></ProgressBar>
            <Label styleClass="heading2" >Food:</Label>
            <ProgressBar fx:id = "foodProgressBar"></ProgressBar>
            <Label styleClass="heading2" >Happiness:</Label>
            <ProgressBar fx:id = "happinessProgressBar"></ProgressBar>
        </VBox>
    </right>


</BorderPane>