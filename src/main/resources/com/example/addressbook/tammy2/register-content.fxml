<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.addressbook.tammy2.RegisterController"
            prefHeight="400.0" prefWidth="600.0">
    <!-- Register content -->
    <VBox fx:id="registerContent">
        <Label styleClass="heading1">Username: </Label>
        <TextField fx:id="registerUserNameInput"/>

        <Label styleClass="heading1">Email: </Label>
        <TextField fx:id="registerUserEmailInput"/>

        <Label styleClass="heading1">Password: </Label>
        <PasswordField fx:id="registerPasswordInput" />

        <Label styleClass="heading1">Tammy name: </Label>
        <TextField fx:id="tammyNameInput"/>

        <Label styleClass="heading1">Tammy type: </Label>
        <HBox fx:id="tammyType">
            <RadioButton fx:id="sleepTammy" text="Sleep" toggleGroup="$tammyTypeInput"/>
            <RadioButton fx:id="studyTammy" text="Study" toggleGroup="$tammyTypeInput"/>
            <RadioButton fx:id="fitnessTammy" text="Fitness" toggleGroup="$tammyTypeInput"/>
        </HBox>

        <Label styleClass="heading1">Tammy species: </Label>
        <HBox fx:id="tammySpecies">
            <RadioButton fx:id="rabbitTammy" text="Rabbit" toggleGroup="$tammySpeciesInput"/>
            <RadioButton fx:id="shellTammy" text="Shell" toggleGroup="$tammySpeciesInput"/>
            <RadioButton fx:id="fishTammy" text="Fish" toggleGroup="$tammySpeciesInput"/>
        </HBox>

        <Button text="Submit" onAction="#handleRegisterSubmitButtonClicked"/>
    </VBox>

</AnchorPane>
