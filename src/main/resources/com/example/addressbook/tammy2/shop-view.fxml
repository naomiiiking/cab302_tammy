<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.tammy2.ShopController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="creditsLabel" text="Credits: $0"/>

    <VBox spacing="10">
        <Label text="Food - Cost: $5"/>
        <TextField fx:id="foodQuantityField" text="1" maxWidth="50"/>
        <Button text="Buy" onAction="#buyFood"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Water - Cost: $2"/>
        <TextField fx:id="waterQuantityField" text="1" maxWidth="50"/>
        <Button text="Buy" onAction="#buyWater"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Happiness - Cost: $10"/>
        <TextField fx:id="happinessQuantityField" text="1" maxWidth="50"/>
        <Button text="Buy" onAction="#buyHappiness"/>
    </VBox>

    <Button text="HOME" onAction="#goHome"/>
</VBox>
